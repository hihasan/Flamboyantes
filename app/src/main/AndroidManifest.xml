<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flamboyantes">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--        <activity-->
<!--            android:name=".views.MainActivity"-->
<!--            android:theme="@style/AppTheme.NoActionBar"/>-->

        <activity
            android:name=".views.auth.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".views.auth.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".views.auth.ForgetPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".views.auth.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>